pipeline {
    agent any

    stages {
        stage('clone') {
            steps {
                git branch: 'main', url: 'https://github.com/hamzamaan/Hello-World-Jenkins-App.git'
            }
        }
        stage('build') {
            steps {
                sh 'npm install'
            }
        }
        stage('deploy') {
            steps {
                echo 'deploying the application' 
            }
        }
    }
}
