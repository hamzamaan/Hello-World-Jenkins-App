pipeline {
    agent any

    stages {
        stage('clone') {
            steps {
                echo 'cloning the application from Github'
                git branch: 'main', url: 'https://github.com/hamzamaan/Hello-World-Jenkins-App.git'
            }
        }
        stage('build') {
            steps {
                echo 'Building the application'
                sh 'npm install'
            }
        }
        stage('deploy') {
            steps {
                echo 'deploying the application'
                sh 'npm start'
            }
        }
    }
}
